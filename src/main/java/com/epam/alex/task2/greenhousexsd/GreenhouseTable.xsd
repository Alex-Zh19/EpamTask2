<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="https://github.com/Alex-Zh19/EpamTask2"
        xmlns:tns="https://github.com/Alex-Zh19/EpamTask2"
        elementFormDefault="qualified">
    <element name="Greenhouse">
        <complexType>
            <sequence>
                <element name="plant" type="tns:Plant" minOccurs="16" maxOccurs="unbounded"/>
            </sequence>
        </complexType>
    </element>

    <complexType name="Plant">
        <all>
            <element name="name" type="tns:Name"/>
            <element name="soil" type="string"/>
            <element name="origin" type="string"/>
            <element name="visualParameters" type="tns:VisualParameters"/>
            <element name="growingTips" type="tns:GrowingTips"/>
            <element name="multiplying" type="string"/>
        </all>
        <attribute name="identifierName" type="tns:IdentifierName" use="required"/>
        <attribute name="origin" use="optional" default="Belarus">
            <simpleType>
                <restriction base="string">
                    <enumeration value="Belarus"/>
                    <enumeration value="Russia"/>
                    <enumeration value="China"/>
                    <enumeration value="USA"/>
                </restriction>
            </simpleType>
        </attribute>
    </complexType>

    <simpleType name="Name">
        <restriction base="string">
            <minLength value="2"/>
            <maxLength value="20"/>
        </restriction>
    </simpleType>

    <simpleType name="IdentifierName">
        <restriction base="ID">
            <pattern value="\\w {2,20}"/>
        </restriction>
    </simpleType>

    <complexType name="VisualParameters">
        <all>
            <element name="stemColor" type="string"/>
            <element name="leavesColor" type="string"/>
            <element name="averageSizeOfPlant" type="string"/>
        </all>
    </complexType>

    <complexType name="GrowingTips">
        <all>
            <element name="temperature" type="int"/>
            <element name="lightning" type="string"/>
            <element name="watering" type="positiveInteger"/>
        </all>
    </complexType>
</schema>
